@model IEnumerable<GestionEcole.Models.Etudiant>

<h1>Liste des Étudiants</h1>
<table>
    <tr>
        <th>Matricule</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Adresse</th>
        <th>Actions</th>
    </tr>
    @foreach (var etudiant in Model)
    {
        <tr>
            <td>@etudiant.Matricule</td>
            <td>@etudiant.Nom</td>
            <td>@etudiant.Prenom</td>
            <td>@etudiant.Adresse</td>
            <td>
                <a asp-action="Edit" asp-route-id="@etudiant.Id">Modifier</a>
                <a asp-action="Delete" asp-route-id="@etudiant.Id">Supprimer</a>
            </td>
        </tr>
    }
</table>
